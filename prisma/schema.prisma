generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Workspace {
  id           Int           @id @default(autoincrement())
  name         String
  ownerId      String
  createdAt    DateTime      @default(now())
  activityLogs ActivityLog[]
  members      Member[]
  sheets       Sheet[]
}

model Sheet {
  id           Int           @id @default(autoincrement())
  name         String
  month        Int
  year         Int
  status       String        @default("OPEN")
  createdAt    DateTime      @default(now())
  workspaceId  Int
  activityLogs ActivityLog[]
  expenses     Expense[]
  workspace    Workspace     @relation(fields: [workspaceId], references: [id])

  @@index([workspaceId], map: "Sheet_workspaceId_fkey")
}

model Member {
  id           Int       @id @default(autoincrement())
  name         String
  email        String?
  workspaceId  Int
  password     String?
  username     String?   @unique
  role         String    @default("MEMBER")
  status       String    @default("ACTIVE")
  paidExpenses Expense[] @relation("Payer")
  workspace    Workspace @relation(fields: [workspaceId], references: [id])
  splits       Split[]

  @@index([workspaceId], map: "Member_workspaceId_fkey")
}

model Expense {
  id          Int      @id @default(autoincrement())
  description String
  amount      Float
  type        String
  date        DateTime @default(now())
  sheetId     Int
  payerId     Int
  isSettled   Boolean  @default(false)
  payer       Member   @relation("Payer", fields: [payerId], references: [id])
  sheet       Sheet    @relation(fields: [sheetId], references: [id], onDelete: Cascade)
  splits      Split[]

  @@index([payerId], map: "Expense_payerId_fkey")
  @@index([sheetId], map: "Expense_sheetId_fkey")
}

model Split {
  id        Int       @id @default(autoincrement())
  amount    Float
  expenseId Int
  memberId  Int
  isPaid    Boolean   @default(false)
  isPending Boolean   @default(false)
  paidAt    DateTime?
  expense   Expense   @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  member    Member    @relation(fields: [memberId], references: [id])

  @@index([expenseId], map: "Split_expenseId_fkey")
  @@index([memberId], map: "Split_memberId_fkey")
}

model ActivityLog {
  id          Int       @id @default(autoincrement())
  action      String
  entityType  String
  entityId    Int?
  description String
  actorId     Int
  actorName   String
  createdAt   DateTime  @default(now())
  workspaceId Int
  sheetId     Int?
  sheet       Sheet?    @relation(fields: [sheetId], references: [id])
  workspace   Workspace @relation(fields: [workspaceId], references: [id])

  @@index([sheetId], map: "ActivityLog_sheetId_fkey")
  @@index([workspaceId], map: "ActivityLog_workspaceId_fkey")
}
