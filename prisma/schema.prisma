generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Workspace {
  id        Int      @id @default(autoincrement())
  name      String
  ownerId   String   // Placeholder for Auth User ID
  createdAt DateTime @default(now())
  
  sheets    Sheet[]
  members   Member[]
  activityLogs ActivityLog[]
}

model Sheet {
  id          Int       @id @default(autoincrement())
  name        String    // e.g. "Th√°ng 1/2026"
  month       Int
  year        Int
  status      String    @default("OPEN") // OPEN, CLOSED
  createdAt   DateTime  @default(now())
  
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId Int
  
  expenses    Expense[]
}

model Member {
  id          Int       @id @default(autoincrement())
  name        String
  email       String?
  username    String?   @unique
  password    String?   // Hashed
  role        String    @default("MEMBER") // ADMIN, MEMBER
  status      String    @default("ACTIVE") // ACTIVE, DELETED
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId Int
  
  paidExpenses Expense[] @relation("Payer")
  splits       Split[]
}

model Expense {
  id          Int      @id @default(autoincrement())
  description String
  amount      Float
  type        String   // SHARED, PRIVATE
  date        DateTime @default(now())
  
  sheet       Sheet    @relation(fields: [sheetId], references: [id])
  sheetId     Int
  
  payer       Member   @relation("Payer", fields: [payerId], references: [id])
  payerId     Int
  
  isSettled   Boolean  @default(false)
  
  splits      Split[]
}

model Split {
  id        Int     @id @default(autoincrement())
  amount    Float
  
  expense   Expense @relation(fields: [expenseId], references: [id])
  expenseId Int
  
  member    Member  @relation(fields: [memberId], references: [id])
  memberId  Int
  
  isPaid    Boolean @default(false)
}

model ActivityLog {
  id          Int      @id @default(autoincrement())
  action      String   // CREATE, UPDATE, DELETE, LOGIN
  entityType  String   // EXPENSE, SHEET, MEMBER, SYSTEM
  entityId    Int?
  description String
  actorId     Int
  actorName   String   // Store name to show even if user deleted
  createdAt   DateTime @default(now())
  
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId Int
}
